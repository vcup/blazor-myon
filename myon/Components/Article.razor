@if (IsMainComponent & Title is not null)
{
    <PageTitle>@Title - myon</PageTitle>
}

<Panel ID=@Title>
    <div style="margin:16px">
    <h1>@Title</h1>
    <Markdown ID="@Title" Path=@Path.Join("wwwroot/Articles", Title + ".md") @ref="markdown"/>
    </div>
</Panel>

@code {
    [Parameter]
    public bool IsMainComponent { get; set; } = false;

    [Parameter]
    public string? Title { get; set; }

    private Markdown markdown;

    public string[] ArticleIndex => markdown.HeadingIDs.ToArray();
}
