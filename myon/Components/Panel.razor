<div id="@ID" class="@Class">
    @ChildContent 
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? ID { get; set; }

    [Parameter]
    public string Class {
        get => _class;
        set => _class += " " + value;
    }

    private string _class = "Panel";
}
